{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "properties": {
        "name": {"type": "string", "minLength": 4, "maxLength": 80, "required": true},
        "group": {"type": "string", "minLength": 0, "maxLength": 80, "required": true},
        "amount": {"type": "string", "pattern": "\\d+"},
        "value": {"type": "string", "pattern": "\\d+"},
        "allow_negative": {"type": "string", "pattern": "on"},
        "value_constant": {"type": "string", "pattern": "on"},
        "gainmods": {
            "type": "string",
            "pattern": "(\\d+)(,\\s*\\d+)*"
        },
        "losemods":{
            "type": "string",
            "pattern": "(\\d+)(,\\s*\\d+)*"
        }
    }
}
