{
    "$schema": "http://json-schema.org/draft-03/schema",
    "type": "object",
    "properties": {
        "name": {"type": "string", "minLength": 4, "maxLength": 80, "required": true},
        "group": {"type": "string", "minLength": 0, "maxLength": 80, "required": true},
        "amount": {"type": "integer"},
        "value": {"type": "integer"},
        "allow_negative": {"type": "boolean"},
        "value_constant": {"type": "boolean"},
        "gainmods": {
            "type": "array",
            "items": {"type": "integer"}
        },
        "losemods":{
            "type": "array",
            "items": {"type": "integer"}
        }
    }
}
